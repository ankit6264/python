a =int(input("enter number"))
rev = 0
while(a!=0):
    i = a%10
    rev =rev*10+i
    a=a//10
print("revers number is",rev)
a=rev
b=0
while(a>0):
    c=a%10
    b=b+c
    a=a//10
print("the total sum of digit",b)

i = b
p=0
while(i!=0):
    p=(p*10)+(i%10)
    i=i//10
if(b== p):
    print(" number is palindrome")
else:
    print("number is not palindrome")

